@model IntegrationProject.Models.AdminBarVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Bar
            </th>
            <th>
                Location
            </th>
            <th>
                Survey Done?
            </th>
            <th>

            </th>
            <th>
                Current Admin
            </th>
            <th>

            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.bars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.bar.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bar.Address)
            </td>
           
                @Html.HiddenFor(modelItem => item.bar.AnswerId)
                @if (item.bar.AnswerId == null)
                {
                    <td>No</td>

                }
                else
                {
                    <td>Completed</td>
                }
            
                 @if (item.bar.AnswerId == null)
                {
                    <td><a class="btn btn-default" asp-action="DoSurvey" asp-route-id="@item.bar.Id">Fill out survey</a></td>

                }
                else
                {
                    <td><a class="btn btn-default" asp-action="DoSurvey" asp-route-id="@item.bar.Id">Retake survey</a></td>
                }
                 
            
            
                @Html.HiddenFor(modelItem => item.adminName)
                @if (item.adminName == null)
                {
                    <td>Needs Admin</td>
                }
                else
                {
                    @if (item.bar.AdminId == Model.admin.Id)
                    {
                        <td>You</td>
                    }
                    else
                    {
                        <td>@item.adminName</td>
                    }
                }
            <td></td>


            <td>
                <!----<a asp-action="Edit" asp-route-id="">Edit</a> |
                <a asp-action="Details" asp-route-id="">Details</a> |
                <a asp-action="Delete" asp-route-id="">Delete</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
