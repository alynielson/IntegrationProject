@model IntegrationProject.Models.AdminBarVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Bar
            </th>
            <th>
                Location
            </th>
            <th>
                Survey Done?
            </th>
            <th>

            </th>
            <th>
                Current Admin
            </th>
            <th>

            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.bars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
           
                @Html.HiddenFor(modelItem => item.AnswerId)
                @if (item.AnswerId == null)
                {
                    <td>No</td>

                }
                else
                {
                    <td>Completed</td>
                }
            <td>

            </td>
            
                @Html.HiddenFor(modelItem => item.AdminId)
                @if (item.AdminId == null)
                {
                    <td>Needs Admin</td>
                }
                else
                {
                    @if (item.AdminId == Model.admin.Id)
                    {
                        <td>You</td>
                    }
                    else
                    {
                        <td>Assigned to other</td>
                    }
                }
            <td></td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
