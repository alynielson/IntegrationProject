@model IntegrationProject.Models.Member
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Member/_Layout.cshtml";
}

<center>
    <h2>Bars Near You</h2>
</center>
<body>
    <div class="container">
        <div class="row">
            @foreach (var business in ViewBag.Businesses)
            {
                <div class="col-sm-3">
                    <center>
                        <div class="card" style="grid-auto-columns">
                            <img class="card-img-top" src="@business.image_url" alt="Card image cap" height="180" width="286">
                            <div class="card-body">
                                <h5 class="card-title">@business.name</h5>
                                <p class="card-text">@business.rating Stars</p>
                                <p class="card-text">@business.display_phone</p>
                                <p class="card-text">@business.location.address1</p>
                                <p class="card-text">@business.location.city, @business.location.state, @business.location.zip_code</p>
                                <a class="btn btn-primary" asp-action="SetBar" asp-controller="Bar" asp-route-id="@business.id">Details</a>
                            </div>
                        </div>
                    </center>
                </div>
            }
        </div>
    </div>
</body>

