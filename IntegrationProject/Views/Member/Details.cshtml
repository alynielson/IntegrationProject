@model IntegrationProject.Models.Member

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.People)
        </dt>
        <dd>
            @Survey.PEOPLE.SingleOrDefault(person => person.Value == Model.Answer.People).Key
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.Price)
        </dt>
        <dd>
            @Survey.PRICE.SingleOrDefault(price => price.Value == Model.Answer.Price).Key
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.Activities)
        </dt>
        <dd>
            @foreach (var item in Model.Answer.Activities)
            {
                <div>@item.Type</div>
                
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.Drinks)
        </dt>
        <dd>
            @foreach (var item in Model.Answer.Drinks)
            {
                <div>@item.Type</div>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.Foods)
        </dt>
        <dd>
            @foreach (var item in Model.Answer.Foods)
            {
                <div>@item.Type</div>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.SitDown)
        </dt>
        <dd>
            @Survey.SITDOWN.SingleOrDefault(sitdown => sitdown.Value == Model.Answer.SitDown).Key
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.TimeOfDay)
        </dt>
        <dd>
            @Survey.TIMEOFDAY.SingleOrDefault(time => time.Value == Model.Answer.TimeOfDay).Key
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.Musics)
        </dt>
        <dd>
            @foreach (var item in Model.Answer.Musics)
            {
            <div>@item.Type</div>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.DressCode)
        </dt>
        <dd>
            @Survey.DRESSCODE.SingleOrDefault(dresscode => dresscode.Value == Model.Answer.DressCode).Key
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Answer.Age)
        </dt>
        <dd>
            @Survey.AGE.SingleOrDefault(age => age.Value == Model.Answer.Age).Key
        </dd>
